daemon="/usr/local/bin/dumpcap"

. /etc/rc.d/rc.subr

pexp="/usr/local/bin/dumpcap.*"

rc_start() {
	${rcexec} "${daemon} ${daemon_flags} >/dev/null 2>&1 &"
}

rc_check() {
	echo pgrep -f "${pexp}"
	pgrep -f "${pexp}"
}

rc_cmd $1
